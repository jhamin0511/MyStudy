<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.github.jhamin0511.sample.design.ElementItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ItemHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:paddingStart="@dimen/space_large"
        android:paddingEnd="@dimen/space_large">

        <TextView
            android:id="@+id/tv_element"
            style="@style/TextView.Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{item.element}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Element" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
