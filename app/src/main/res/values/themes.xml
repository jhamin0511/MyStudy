<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <!-- Base application theme. -->
    <style name="Theme.MyStudy" parent="Theme.Main">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">?attr/colorPrimaryVariant
        </item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MainActivity" parent="Theme.MyStudy">
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
