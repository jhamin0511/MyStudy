<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.github.jhamin0511.mystudy.ui.diffutil.WhiskeyHeaderItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:padding="@dimen/space_small"
        android:paddingStart="@dimen/space_large"
        android:paddingEnd="@dimen/space_large">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_small"
            android:gravity="center_vertical"
            android:text="@{item.date}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xlarge"
            app:drawableStartCompat="@drawable/ic_calendar_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2022.07.23." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
